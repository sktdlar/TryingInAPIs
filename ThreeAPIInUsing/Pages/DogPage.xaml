<Page x:Class="ThreeAPIInUsing.Pages.DogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ThreeAPIInUsing.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DogPage"
      Background="Beige">

    <Grid>
        <Grid Height="400" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label FontSize="32" FontFamily="Arial">Рандомная фотка собачки</Label>
            <Image Name="DogPic" Width="300" Height="300"/>


            <Border CornerRadius="5" VerticalAlignment="Bottom" Background="#FFE2E29A" BorderThickness="1" BorderBrush="#FFDDDAB4">
                <Button Name="NewDogBtn" Padding="10" FontFamily="Arial" Background="{x:Null}" BorderBrush="{x:Null}" Click="NewFactBtn_Click">
                    Новая фотка
                </Button>
            </Border>
        </Grid>
    </Grid>
</Page>

