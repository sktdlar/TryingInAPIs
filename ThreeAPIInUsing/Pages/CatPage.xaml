<Page x:Class="ThreeAPIInUsing.Pages.CatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ThreeAPIInUsing.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CatPage" Background="AliceBlue">

    <Grid>
        <Grid Height="400" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label FontSize="32" FontFamily="Arial">Случайные факты о котиках</Label>
                <TextBlock TextWrapping="Wrap" Name="FactTb" VerticalAlignment="Center" FontFamily="Arial" FontSize="16" HorizontalAlignment="Center">
                    Факт
                </TextBlock>
            <Border CornerRadius="5" VerticalAlignment="Bottom" Background="#FFB2FFE5" BorderThickness="1" BorderBrush="Aquamarine">
                <Button Name="NewFactBtn" Padding="10" FontFamily="Arial" Background="{x:Null}" BorderBrush="{x:Null}" Click="NewFactBtn_Click">
                    Новый факт
                </Button>
            </Border>
        </Grid>
    </Grid>
</Page>
